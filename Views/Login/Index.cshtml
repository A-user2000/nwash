@model Wq_Surveillance.Models.Login
@{
    ViewData["Title"] = "Login";
    ViewData["Url"] = "Login";
}
<style>
    .login-container {
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 350px;
    }

        .login-container h2 {
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
            color: #333;
            text-align: center;
        }

    .input-group {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .input-group i {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #888;
        }

        .input-group input {
            width: 100%;
            padding: 10px 10px 10px 35px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
            outline: none;
        }

            .input-group input:focus {
                border-color: #007bff;
            }

    .password-toggle {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #888;
    }

        .password-toggle:hover {
            color: #333;
        }

    .login-button {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: #fff;
        font-size: 1rem;
        cursor: pointer;
    }

        .login-button:hover {
            background-color: #0056b3;
        }
</style>
<div class="row" style="margin-top:15em">
    <div class="col-md-3 " style="margin:auto;">
        <br />
        <div class="login-container">
            <h3 style="text-align: center; color: #2a4a3d;">Login</h3><br />
            <form autocomplete="off" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group">
                    <i class="fas fa-envelope"></i>
                    <input type="email" placeholder="Email" name="Email" required>
                </div>
                <div class="input-group">
                    <i class="fas fa-lock"></i>
                    <input type="password" id="password" name="Password" placeholder="Password" required>
                    <span class="password-toggle" onclick="togglePassword()">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-success" style="float: left;"><i class="fas fa-sign-in-alt"></i>&nbsp; Login</button>
                   </div>
                <br />
            </form>
        </div>
    </div>
</div>

