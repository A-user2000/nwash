@model List<Wq_Surveillance.Models.Dto.FormSouDto>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var contextHost = HttpContextAccessor.HttpContext.Request.Host;
    var firstForm = Model.FirstOrDefault(); // Get the first form for common details
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>Form Data - WQS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" crossorigin="anonymous">
    <style>
        .bsv {
            width: 275mm;
            padding: 15mm 20mm;
            margin: 10mm auto;
            border: 1px #D3D3D3 solid;
            border-radius: 0px;
            background: white;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <div class="container-fluid" style="float: left; position: fixed; padding-top: 20px; padding-bottom: 20px; top: 0px;background: #fff !important;z-index: 999;">
        <div style="float:left;">
            <a class="item" asp-area="" asp-controller="Dashboard" asp-action="Index">
                <img src="~/images/logos/header.png" class="img-responsive" alt="Ministry of Health &amp; Population" style="width: 50%;">
            </a>
        </div>
        <div style="clear:both;"></div>
        <div class="dropdown-divider" style="border-top: 1px solid #002f84;"></div>

        <div style="clear: both;"></div>
     
            <div class="container-fluid" style="background:#e9ebf4; padding:5px; float:left;">
                <h5 style="margin-bottom:0px;">
                    खानेपानी सुरक्षा योजनाको विस्तृत लेखाजोखा फाराम (WSP Implemented WSS)
                </h5>
            </div>
        
    </div>
    <div class="bsv" style="margin-top:165px;">
        <!-- Common Table (Displayed Only Once) -->
        @if (firstForm != null)
        {
            <div class="table-responsive">
                <table class="table table-borderless" style="width:90%;">
                    <tr><td>Name of schema</td><td>@firstForm.ProName</td></tr>
                    <tr><td>Project code</td><td>@firstForm.ProCode</td></tr>
                    <tr><td>Address</td><td>@firstForm.Address</td></tr>
                    <tr><td>Total HH served</td><td>@firstForm.TotalHhServed</td> </tr>
                    <tr>
                        <td>Population served</td>
                        <td>@firstForm.TotalPop</td>
                    </tr>
                </table>
            </div>
        }

        <!-- Loop Through Each Form -->
        @for (int i = 0; i < Model.Count; i++)
        {
            var form = Model[i];
            <div style="color:#002F84;">
                <h4 style="text-align: center;">Sanitary Inspection - Source Form @(i + 1)</h4>
            </div>
            <br />
            <div class="table-responsive">
                <table class="table table-borderless" style="width:90%;">
                    <tr>
                        <td>
                            मुहान क्षेत्रमा रुख बिरुवा नभएकोले बाढी पहिरोले मुहानमा प्रदूषण को सम्भावना भएको
                        </td>
                        <td>@form.SourceSanitationCondition1</td>
                    </tr>
                    <tr>
                        <td>
                            खुल्ला दिसा पिसाब को कारण मुहान क्षेत्रमा जैविक प्रदूषणको संभावना
                        </td>
                        <td>@form.SourceSanitationCondition2</td>
                    </tr>
                    <tr>
                        <td>
                            मुहान वरिपरि ढलको अभावमा जमिनको प्रदुषित पानी को प्रवेश
                        </td>
                        <td>@form.SourceSanitationCondition3</td>
                    </tr>
                    <tr>
                        <td>
                            अनावश्यक मानिस तथा जनावरको मुहान क्षेत्रमा सजीलै पहुच
                        </td>
                        <td>@form.SourceSanitationCondition4</td>
                    </tr>
                    <tr>
                        <td>
                            मुहान क्षेत्रमा सरसफाइको कमिले गर्दा प्रदूषण को सम्भावना
                        </td>
                        <td>@form.SourceSanitationCondition5</td>
                    </tr>
                    <tr>
                        <td>
                            मुहान क्षेत्रमा रुख बिरुवा नभएकोले बाढि पहिरोले मुहानमा प्रदूषण को सम्भावना भएको
                        </td>
                        <td>@form.SourceSanitationCondition6</td>
                    </tr>
                    <tr>
                        <td>
                            खुल्ला दिसा पिसाब को कारण मुहान क्षेत्रमा जैविक प्रदूषण को संभावना
                        </td>
                        <td>@form.SourceSanitationCondition7</td>
                    </tr>
                    <tr>
                        <td>
                            पानीको मुहानमा खोला बाट पानी तर्काउदा अत्याधिक ठोस फोहर तथा धमीलोपनाको नियन्त्रणको अभाव
                        </td>
                        <td>@form.SourceSanitationCondition8</td>
                    </tr>
                    <tr>
                        <td>
                            अनावश्यक मानिस तथा जनावरको मुहान क्षेत्रमा सजिलै पहुच
                        </td>
                        <td>@form.SourceSanitationCondition9</td>
                    </tr>
                    <tr>
                        <td>
                            मुहान क्षेत्रमा सरसफाइको कमिले गर्दा प्रदूषण को सम्भावना
                        </td>
                        <td>@form.SourceSanitationCondition10</td>
                    </tr>
                    <tr>
                        <td>
                            ट्युव वेलको हेड को वरीपरी पेटि नभएको कारण जमिनको फोहर पानी पाइप बाट भित्र प्रवेस हुनसक्ने सम्भावना
                        </td>
                        <td>@form.SourceSanitationCondition11</td>
                    </tr>
                    <tr>
                        <td>
                            वरिपरि वातावरणमा खुल्ला दिसा पिसाब गरिने भएकोले जमिनको पानीमा जैबिक प्रदूषण हुनसक्ने सम्भावना
                        </td>
                        <td>@form.SourceSanitationCondition12</td>
                    </tr>
                    <tr>
                        <td>
                            वरिपरि जमिनमा रसायनिक वा फोहर पानीको खुल्ला बिसर्जन भएको कारण जमिनको पानी प्रदुषित भएको
                        </td>
                        <td>@form.SourceSanitationCondition13</td>
                    </tr>
                    <tr>
                        <td>
                            जमिनको पानीमा प्राकृतिक रुपमा रासायनिक मिसावट भएको
                        </td>
                        <td>@form.SourceSanitationCondition14</td>
                    </tr>
                    <tr>
                        <td>
                            जमिन मुनि पानीको तिब्र रिचार्ज भएर वा तिब्र पम्पिंग भएको कारण सतहको फोहर पानी मिसावट भएको हुनसक्ने सम्भावना
                        </td>
                        <td>@form.SourceSanitationCondition15</td>
                    </tr>
                </table>
            </div>
            <hr style="border-top: 2px solid #002f84; margin: 20px 0;" />
        }
    </div>
    <div id="imgModal" class="modal fade">
        <div class="modal-dialog modal-lg" style="width: auto !important; display: block !important;">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" title="Close">&times;</button>
                    <br />
                    <center><img class="showimage img-fluid" src="" /></center>
                    <br />
                    <a class="dlod btn btn-outline-primary btn-sm" href="" download style="float:right;" title="Download"><i class="fa fa-download"></i></a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>