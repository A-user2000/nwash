@model List<Wq_Surveillance.Models.Dto.FormStrDto>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var contextHost = HttpContextAccessor.HttpContext.Request.Host;
    var firstForm = Model.FirstOrDefault(); // Get the first form for common details
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>Form Data - WQS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" crossorigin="anonymous">
    <style>
        .bsv {
            width: 275mm;
            padding: 15mm 20mm;
            margin: 10mm auto;
            border: 1px #D3D3D3 solid;
            border-radius: 0px;
            background: white;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <div class="container-fluid" style="float: left; position: fixed; padding-top: 20px; padding-bottom: 20px; top: 0px;background: #fff !important;z-index: 999;">
        <div style="float:left;">
            <a class="item" asp-area="" asp-controller="Dashboard" asp-action="Index">
                <img src="~/images/logos/header.png" class="img-responsive" alt="Ministry of Health &amp; Population" style="width: 50%;">
            </a>
        </div>
        <div style="clear:both;"></div>
        <div class="dropdown-divider" style="border-top: 1px solid #002f84;"></div>

        <div style="clear: both;"></div>
        <div class="container-fluid" style="background:#e9ebf4; padding:5px; float:left;">
            <h5 style="margin-bottom:0px;">
                खानेपानी सुरक्षा योजनाको विस्तृत लेखाजोखा फाराम (WSP Implemented WSS)
            </h5>
        </div>
    </div>
    <div class="bsv" style="margin-top:165px;">
        <!-- Common Table (Displayed Only Once) -->
        @if (firstForm != null)
        {
            <div class="table-responsive">
                <table class="table table-borderless" style="width:90%;">
                    <tr><td>Name of schema</td><td>@firstForm.ProName</td></tr>
                    <tr><td>Project code</td><td>@firstForm.ProCode</td></tr>
                    <tr><td>Address</td><td>@firstForm.Address</td></tr>
                    <tr><td>Total HH served</td><td>@firstForm.TotalHhServed</td> </tr>
                    <tr>
                        <td>Population served</td>
                        <td>@firstForm.TotalPop</td>
                    </tr>
                </table>
            </div>
        }

        <!-- Loop Through Each Form -->
        @for (int i = 0; i < Model.Count; i++)
        {
            var form = Model[i];
            <div style="color:#002F84;">
                <h4 style="text-align: center;">Sanitary Inspection - Structure Form @(i + 1)</h4>
            </div>
            <br />
            <div class="table-responsive">
                <table class="table table-borderless" style="width:90%;">
                    <tr>
                        <td>
                            पानी टंकि वरिपरि बार नभएको र छोप्ने ढक्कन नभएको कारण अनावस्यक मानिस तथा जनावर को प्रवेश तथा प्रदुषित गतिबिधि हुने गरेको ।
                        </td>
                        <td>@form.StructureSanitationCondition1</td>
                    </tr>
                    <tr>
                        <td>
                            बिपिटि वरी परी पेटि नभएको वा सतहको पानी तर्काउने ढल नभएको वा वरी परी फोहर भएको कारण फोहर पानी को मिसावट हुनसक्ने सम्भावना भएको
                        </td>
                        <td>@form.StructureSanitationCondition2</td>
                    </tr>
                    <tr>
                        <td>
                            बिपिटि टंकिको पर्खालमा चुहावट भएको या पाईप फिटिंगहरुमा चुहावट भएको कारण फोहर पानी को मिसावट हुनसक्ने सम्भावना भएको
                        </td>
                        <td>@form.StructureSanitationCondition3</td>
                    </tr>
                    <tr>
                        <td>
                            बाढी पहिरो को कारण बिपिटिमा फोहर पानी ले पुरिएको कारण या भल्भमा फोहर पानी पसेको कारण प्रदुषण भएको
                        </td>
                        <td>@form.StructureSanitationCondition4</td>
                    </tr>
                    <tr>
                        <td>
                            बिपिटिको उचित सन्चालन नभएको कारण प्रसोधित पानी प्रदुषित भएको
                        </td>
                        <td>@form.StructureSanitationCondition5</td>
                    </tr>
                    <tr>
                        <td>
                            मुहानमा अत्तेधिक धमिलो पानी भएको या इकाइको क्षमता कम भएको या उचित सन्चालन नभएको कारण सेडिमेन्ट वा रफिंग इकाइ बाट प्रसोद्धित पानीमा बढि धमिलो पानी भएको
                        </td>
                        <td>@form.StructureSanitationCondition6</td>
                    </tr>
                    <tr>
                        <td>
                            मुहानमा अत्तेधिक घुलित पदार्थ भएको या इकाइको क्षमता कम भएको या उचित सन्चालन नभएको कारण फिल्टर इकाइ बाट प्रसोद्धित पानीमा बढि घुलित पदार्थ भएको
                        </td>
                        <td>@form.StructureSanitationCondition7</td>
                    </tr>
                    <tr>
                        <td>
                            मुहानमा रसयनिक पदार्थ भएको या इकाइको क्षमता कम भएको या उचित सन्चालन नभएको कारण प्रसोधित पानीमा बढि रसायनिक तत्व भएको
                        </td>
                        <td>@form.StructureSanitationCondition8</td>
                    </tr>
                    <tr>
                        <td>
                            क्लोरिन को मात्रा कम भएको या सम्पर्क समय कम भएको या उचित रुपमा सन्चालन नभएको कारण प्रसोधित पानीमा इ-कोलि देखिएको छ
                        </td>
                        <td>@form.StructureSanitationCondition9</td>
                    </tr>
                    <tr>
                        <td>
                            प्रसोधित पानीमा अपर्याप्त क्लोरिन अवशेष भएको ले पाइप प्रणालिमा हुने प्रदुषण को जोखिम भएको
                        </td>
                        <td>@form.StructureSanitationCondition10</td>
                    </tr>
                </table>
            </div>
            <hr style="border-top: 2px solid #002f84; margin: 20px 0;" />
        }
    </div>
    <div id="imgModal" class="modal fade">
        <div class="modal-dialog modal-lg" style="width: auto !important; display: block !important;">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" title="Close">&times;</button>
                    <br />
                    <center><img class="showimage img-fluid" src="" /></center>
                    <br />
                    <a class="dlod btn btn-outline-primary btn-sm" href="" download style="float:right;" title="Download"><i class="fa fa-download"></i></a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>